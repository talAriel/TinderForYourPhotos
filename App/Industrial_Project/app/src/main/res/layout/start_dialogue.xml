<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#35000000">

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="301dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/dialogue_start">

        <RelativeLayout
            android:layout_width="229dp"
            android:layout_height="48dp"
            android:layout_marginTop="121dp"
            android:layout_marginLeft="27dp"
            android:background="@drawable/green">

            <ImageView
                android:layout_width="30.2dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/hand"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textColor="?attr/colorControlNormal"
                android:textSize="14sp"
                android:text="Swipe right to like" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="181dp"
                android:background="@drawable/like"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="229dp"
            android:layout_height="48dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="196dp"
            android:background="@drawable/red">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/ignore"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64.5dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textColor="?attr/colorControlNormal"
                android:textSize="14sp"
                android:text="Swipe left to ignore" />

            <ImageView
                android:layout_width="30.2dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="203dp"
                android:background="@drawable/hand_mirror"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>